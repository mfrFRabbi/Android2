<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_gradient"
    android:weightSum="1"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country_list"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            />
        <Button
            android:id="@+id/fragmentBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fragment"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/spinnerBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spinner"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            />
        <Button
            android:id="@+id/progressBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/progress"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/autoBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto Complete Text "
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/expandableListBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ExpandableListView"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/webBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HTML WebView"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/textHtmlBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HTML TextView"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/scrollTabBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scroll Tab "
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>





</LinearLayout>